<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView android:src="@drawable/weibo_button"
			android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
		<TextView android:layout_height="wrap_content" android:textSize="17dip"
			android:layout_width="wrap_content" android:text="@string/sina_weibo"
			android:layout_weight="1" android:layout_marginLeft="5dip" android:id="@+id/setting_sina_textview"></TextView>
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/setting_button_sina"
			android:text="@string/binding"></Button>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="vertical">
		<TextView android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:textSize="17dip"
			android:id="@+id/setting_clearCache" android:text="@string/clear_cache" android:layout_width="fill_parent" android:layout_weight="1"></TextView>
		<TextView android:layout_height="wrap_content" android:layout_marginLeft="5dip"
			android:layout_width="wrap_content" android:text="ad"
			android:id="@+id/setting_cacheSize"></TextView>
	</LinearLayout>

</LinearLayout>
