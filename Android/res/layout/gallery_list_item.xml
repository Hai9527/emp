<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:gravity="center_vertical"
	android:layout_height="fill_parent">
	<ImageView android:layout_centerVertical="true"
		android:layout_alignParentLeft="true" android:id="@+id/gallery_list_item_imageView"
		android:scaleType="fitCenter" android:layout_height="75dip"
		android:layout_width="75dip"></ImageView>
	<TextView android:id="@+id/gallery_list_item_title"
		android:textColor="@color/black" android:textSize="18dip"
		android:typeface="sans" android:layout_width="wrap_content"
		android:text="" android:layout_height="wrap_content"
		android:layout_centerVertical="true" android:layout_toRightOf="@+id/gallery_list_item_imageView"
		android:layout_marginLeft="5dip"></TextView>

	<TextView android:layout_height="wrap_content" android:text=""
		android:layout_width="wrap_content" android:id="@+id/gallery_list_item_count"
		android:textSize="18dip" android:typeface="sans"
		android:layout_centerVertical="true" android:layout_toRightOf="@+id/gallery_list_item_title"></TextView>



</RelativeLayout>

