<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:padding="8px">

	<ImageView android:layout_alignParentLeft="true"
		android:scaleType="fitXY" android:layout_width="fill_parent"
		android:layout_height="150dip" android:id="@+id/artticle_listview_item_imageView"
		></ImageView>
	<LinearLayout 
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:orientation="horizontal">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical"
		android:layout_marginLeft="15dip" android:layout_width="fill_parent"
		android:layout_marginRight="15px">
		<TextView android:text="TextView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/artticle_listview_item_title"
			android:lines="1" android:ellipsize="end" android:textStyle="bold"></TextView>


		<TextView android:text="TextView" android:layout_width="wrap_content"
			android:ellipsize="end" android:layout_height="wrap_content"
			android:id="@+id/artticle_listview_item_summary" android:lines="2"></TextView>

		<TextView android:text="TextView" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignBottom="@+id/artticle_listview_item_imageView"
			android:id="@+id/artticle_listview_item_time"></TextView>
	</LinearLayout>

	<!-- <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_centerVertical="true" android:layout_alignParentRight="true" 
		android:id="@+id/artticle_listview_image_count"></ImageView> -->
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/artticle_listview_item_linearLayout"
		android:layout_marginLeft="15dip"
		android:layout_height="wrap_content" android:gravity="center">
		<TextView android:id="@+id/artticle_listview_commentcount"
			android:layout_width="wrap_content" android:text="TextView"
			android:layout_height="wrap_content" android:layout_marginTop="1dip"
			android:layout_marginBottom="5dip"></TextView>
	</LinearLayout>
</LinearLayout>
</LinearLayout>
 
 
