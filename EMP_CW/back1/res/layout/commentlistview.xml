<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:gravity="center_vertical">
		<ImageView android:layout_height="wrap_content"
			android:src="@android:drawable/ic_input_add" android:layout_width="wrap_content"
			android:id="@+id/commentlistview_imageView_add"></ImageView>
		<TextView android:id="@+id/commentlistview_textView_add"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="5dip" android:text="@string/add_comment"></TextView>
	</LinearLayout>
	<ListView android:id="@+id/commentlistview_listView"
		android:cacheColorHint="#00000000" android:dividerHeight="1px"
		android:layout_height="wrap_content" android:layout_width="fill_parent"></ListView>

</LinearLayout>
